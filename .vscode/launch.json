{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        { // Automatic restart works, but cannot connect to runtime process
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "runtimeExecutable": "${workspaceFolder}\\node_modules\\.bin\\nodemon",
            "program": "${workspaceFolder}\\index.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}\\out\\index.js"
            ]
        },
        { // Break-points hit nicely, but no automatic restart
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.ts",
            "outFiles": [
                "${workspaceFolder}\\out\\index.js"
            ]
        },
        { // Requires "npm run watch" first. Debugger attachs, but break-points don't hit
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "processId": "${command:PickProcess}",
            "outFiles": [
                "${workspaceFolder}\\out\\index.js"
            ]
        }
    ]
}